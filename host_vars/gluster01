# Public interface
ext_interface: eth1
pnet_interface: eth3
mgmt_interface: eth0

network_ether_interfaces:
  # Public API
  - device: eth0
    onboot: yes
    type: Ethernet
    bootproto: static
    address: 192.168.122.118
    netmask: 255.255.255.0
    gateway: 192.168.122.1
    dns1: 192.168.122.1
    dns2: 8.8.8.8
  # Internal
  - device: eth2
    onboot: yes
    type: Ethernet
    bootproto: static
    address: 172.17.0.118
    netmask: 255.255.255.0
  # TenantNetwork
  - device: eth3
    onboot: yes
    type: Ethernet
    bootproto: none
  # Storage
  - device: eth4
    onboot: yes
    type: Ethernet
    bootproto: static
    address: 172.18.0.118
    netmask: 255.255.255.0

